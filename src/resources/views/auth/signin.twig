{% extends 'templates/app.twig' %}

{% block content %}
	<div class="row">
		<div class="col-md-6">
			<div class='panel panel-default'>
				<div class="panel-heading">Sign in</div>
				<div class="panel-body">
					<form action="{{ path_for('auth.signin') }}" method="post" autocomplete="off">
						<div class="form-group {{ errors.email ? ' has-error' : ''}}">
    						<label for="email">Email</label>
    						<input type="email" name="email" id="email" placeholder="you@domain.com" class="form-control" value="{{ old.email }}">
    						{% if errors.email %}
    							<span class="help-block">{{ errors.email | first }}</span>
    						{% endif %}
						</div>
						<div class="form-group {{ errors.password ? ' has-error' : ''}}">
    						<label for="password">Password</label>
    						<input type="password" name="password" id="password" placeholder="Type a password" class="form-control">
    						{% if errors.password %}
    							<span class="help-block">{{ errors.password | first }}</span>
    						{% endif %}
						</div>
						<button type="submit" class="btn btn-default">Sign in</button>
						
						{{ csrf.field | raw}}
						
					</form>
				</div>
			</div>
		</div>
		<div class="col-md-6">
			<div class='panel panel-default'>
				<div class="panel-heading">Sign in with your social networks</div>
				<div class="panel-body">
					<a href="{{ path_for('auth.signin.facebook') }}" class="btn btn-block btn-social btn-facebook"><span class="fa fa-facebook"></span> Connect with Facebook</a>
                    <a href="{{ path_for('home') }}" class="btn btn-block btn-social btn-google"><span class="fa fa-google"></span> Connect with Google</a>
                    <a href="{{ path_for('auth.signin.twitter') }}" class="btn btn-block btn-social btn-twitter"><span class="fa fa-twitter"></span> Connect with Twitter</a>
				</div>
			</div>
		</div>
	</div>
{%  endblock %}